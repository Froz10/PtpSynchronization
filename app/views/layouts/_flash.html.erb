<%- green = "flex justify-between text-green-700 border border-green-400 shadow-inner rounded relative p-3 bg-green-100" %>
<%- red = "flex justify-between text-red-700 border border-red-400 shadow-inner rounded relative p-3 bg-red-100" %>
<% flash.each do |flash_type, message| %>
    <div
      data-controller="flash"
      data-flash-target="elementToHide"
      class="<%=(flash_type == "alert" ? red : green) %>"
      role="<%= flash_type %>">
      <p class="<%= flash_type %>"><%= message %></p>
        <strong data-action="click->flash#toggle" class="text-xl lighn-center cursor-pointer">
          &times;
        </strong>
    </div>
<% end %>