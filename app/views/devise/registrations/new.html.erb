
<%= render "devise/shared/error_messages", resource: resource %>
<div class="w-screen h-screen flex justify-center items-center bg-gray-100">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="bg-grey-lighter min-h-screen flex flex-col">
      <div class="container max-w-sm mx-auto flex-1 flex flex-col items-center justify-center px-2">
          <div class="bg-white px-6 py-8 rounded shadow-md text-black w-full">
              <h1 class="mb-8 text-3xl text-center">SIGN UP</h1>
              <input 
                  type="email"
                  class="mb-5 p-3 w-80 focus:border-purple-700 rounded border-2 outline-none"
                  name="user[email]"
                  autofocus="autofocus"
                  id="user_email"
                  placeholder="Work email" />
              <input 
                  type="username"
                  class="mb-5 p-3 w-80 focus:border-purple-700 rounded border-2 outline-none"
                  name="user[username]"
                  autofocus="autofocus"
                  id="user_login"
                  placeholder="Tacacs username" />
              <input 
                  type="password"
                  class="mb-5 p-3 w-80 focus:border-purple-700 rounded border-2 outline-none"
                  name="user[password]"
                  id="user_password"
                  placeholder="Tacacs password" />
              <input 
                  type="password"
                  class="mb-5 p-3 w-80 focus:border-purple-700 rounded border-2 outline-none"
                  name="user[password_confirmation]"
                  id="user_password_confirmation"
                  placeholder="Password confirmation" />

              <button class="bg-purple-600 hover:bg-purple-900 text-white font-bold p-2 rounded w-80" id="sign_up" type="submit"><span>Sign Up</span></button>
          </div>
      </div>
    </div>
  <% end %>
